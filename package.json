{
  "name": "tanchiki",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.d/app-init.js && lerna clean && yarn && lerna bootstrap && git config --local commit.template .gitcommittemplate",
    "build:client": "lerna run build --scope=client",
    "build:server": "lerna run build --scope=server",
    "build": "yarn build:client && yarn build:server",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "preview": "yarn build && lerna run preview --parallel",
    "docker": "docker-compose up",
    "docker:preview": "docker-compose up --build",
    "docker:db": "docker-compose up postgres -d",
    "docker:pgadmin": "docker-compose up pgadmin -d",
    "docker:mongo": "docker-compose up mongo-express -d",
    "docker:dev": "yarn docker:pgadmin && yarn docker:mongo && yarn dev"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=19"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@evilmartians/lefthook": "1.1.1",
    "lerna": "5.4.3"
  }
}
